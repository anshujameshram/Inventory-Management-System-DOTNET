            @Html.EditorFor(model => model.orddate, new { htmlAttributes = new { @class = "form-control" ,@type="date"} })
            @Html.ValidationMessageFor(model => model.orddate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.duedate, htmlAttributes: new { @class = "control-label col-md-2"})
