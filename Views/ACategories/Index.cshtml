@model IEnumerable<WebApplication1.Models.ACategory>

@{
    ViewBag.Title = "Index";
}

<h2>List of categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cat_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cat_comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cat_date)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cat_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cat_comment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cat_date)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.cat_id }) |
            @Html.ActionLink("Details", "Details", new { id=item.cat_id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.cat_id })
        </td>
    </tr>
}

</table>
